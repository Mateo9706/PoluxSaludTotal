@model Sami.Models.ConfigurationAgentCoachUsers

@{
    ViewBag.Title = "Editar usuario";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="card">
        <div class="body">
            <div class="row">
                <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                    @using (Html.BeginForm("Configuration", "Agent", FormMethod.Post, new { role = "form", autocomplete = "off" }))
                    {
                        @Html.AntiForgeryToken()
                        @Html.HiddenFor(m => m.UserId)
                        <hr />
                        @Html.ValidationSummary("", new { @class = "text-danger" })
                        <div class="row">
                            <div class="col-md-8 col-lg-8">
                                <div class="form-group">
                                    @Html.LabelFor(m => m.UserName, new { @class = "col-md-6 control-label" })
                                    <div class="col-md-10">
                                        @Html.TextBoxFor(m => m.UserName, new { @class = "form-control", @readonly = "readonly" })
                                    </div>
                                </div>
                                <div class="form-group">
                                    @Html.LabelFor(m => m.correoCorporativo, new { @class = "col-md-6 control-label" })
                                    <div class="col-md-10">
                                        @Html.TextBoxFor(m => m.correoCorporativo, new { @class = "form-control", autocomplete = "false" })
                                    </div>
                                </div>
                                <div class="form-group">
                                    @Html.LabelFor(m => m.Password, new { @class = "col-md-6 control-label" })
                                    <div class="col-md-10">
                                        @Html.PasswordFor(m => m.Password, new { @class = "form-control", autocomplete = "false" })
                                    </div>
                                </div>
                                <div class="form-group">
                                    @Html.LabelFor(m => m.ConfirmPassword, new { @class = "col-md-6 control-label" })
                                    <div class="col-md-10">
                                        @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control", autocomplete = "false" })
                                    </div>
                                </div>
                                <div class="form-group">
                                    <div class="col-md-offset-2 col-md-10">
                                        <input type="submit" class="btn btn-success btn-block" value="Modificar Datos" />
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-4 col-lg-4">
                                <div class="form-group">
                                    <center>
                                        <img src="~/Images/UploadedProfilePictures/@Url.Content(Model.PhotoUser)" class="img-thumbnail" id="imagePreview" />
                                        @Html.LabelFor(model => model.PhotoUser, htmlAttributes: new { @class = "control-label col-md-6" })
                                    </center>
                                    <br />
                                    <b>NOTA:</b>
                                    <p>
                                        <ul>
                                            <li>Recuerde utilizar Mayusculas, números y caracteres especiales (#$%*=) para la contraseña.</li>
                                            <li>Solicitamos su amable colaboración en actualizar correctamente su correo corporativo.</li>
                                            <li>Para cambios de imágenes, favor envíar la fotografía (fondo blanco) a: juan.parroquiano@axity.com</li>
                                            <li><b>Al momento de hacer el cambio de contraseña, se cerrará sesión.</b></li>
                                        </ul>
                                    </p>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>



@model Samico.Models.Compania

@{
    ViewBag.Title = "Create";
    Layout = null;
}
<br />
<div class="row">
    <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
        @using (Html.BeginForm(null, null, FormMethod.Post, new { enctype = "multipart/form-data" }))
        {
            @Html.AntiForgeryToken()

            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="row">
                <div class="col-md-4 col-lg-4 col-xs-12">
                    <fieldset>
                        <h4 style="color: @Html.Raw(string.IsNullOrEmpty(User.Identity.GetFooterColor()) ? "#3C1053" : User.Identity.GetFooterColor()); font-weight: bold;">
                            Datos del Cliente
                        </h4>
                        <div class="form-group">
                            <label class="control-label col-md-12" for="Compa_ia">Nombre de la Compañia: </label>
                            <div class="col-md-12">
                                @Html.EditorFor(model => model.Compañia, new { htmlAttributes = new { @class = "form-control", required = "required" } })
                                @Html.ValidationMessageFor(model => model.Compañia, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="row">
                                <div class="col-md-6">
                                    <label class="control-label col-md-12" for="HeaderColor">Color Principal: </label>
                                    @Html.EditorFor(model => model.HeaderColor, new { htmlAttributes = new { @style = "width:100%", type = "color", required = "required" } })
                                    @Html.ValidationMessageFor(model => model.HeaderColor, "", new { @class = "text-danger" })
                                </div>
                                <div class="col-md-6">
                                    <label class="control-label col-md-12" for="FooterColor">Color Secundario: </label>
                                    @Html.EditorFor(model => model.FooterColor, new { htmlAttributes = new { @style = "width:100%", type = "color", required = "required" } })
                                    @Html.ValidationMessageFor(model => model.FooterColor, "", new { @class = "text-danger" })
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label col-md-12" for="ValidateDA">Directorio Activo: </label>
                            <div class="col-md-12">
                                <div class="checkbox">
                                    <select class="form-control list-box tri-state" id="ValidateDA" name="ValidateDA" required="true">
                                        <option selected="selected" value="">Seleccione si tiene o no Directorio Activo</option>
                                        <option value="true">Si tiene Directorio Activo</option>
                                        <option value="false">No tiene Directorio Activo</option>
                                    </select>
                                    @Html.ValidationMessageFor(model => model.ValidateDA, "", new { @class = "text-danger" })
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label col-md-12" for="IpAuthenticationDA">Ip Directorio Activo: </label>
                            <div class="col-md-12">
                                @Html.EditorFor(model => model.IpAuthenticationDA, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.IpAuthenticationDA, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label col-md-12" for="Dominio_Compania">Dominio Compañía: </label>
                            <div class="col-md-12">
                                @Html.EditorFor(model => model.Dominio_Compania, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.Dominio_Compania, "", new { @class = "text-danger" })
                            </div>
                        </div>
                    </fieldset>
                </div>
                <div class="col-md-4 col-lg-4 col-xs-12">
                    <fieldset>
                        <h4 style="color: @Html.Raw(string.IsNullOrEmpty(User.Identity.GetFooterColor()) ? "#3C1053" : User.Identity.GetFooterColor()); font-weight: bold;">
                            QnA Maker API
                        </h4>
                        <div class="form-group">
                            <label class="control-label col-md-12" for="KnowledgebaseId">Id QnA: </label>
                            <div class="col-md-12">
                                @Html.EditorFor(model => model.KnowledgebaseId, new { htmlAttributes = new { @class = "form-control", required = "required" } })
                                @Html.ValidationMessageFor(model => model.KnowledgebaseId, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label col-md-12" for="QnamakerSubscriptionKey">Suscribción Key QnA: </label>
                            <div class="col-md-12">
                                @Html.EditorFor(model => model.QnamakerSubscriptionKey, new { htmlAttributes = new { @class = "form-control", required = "required" } })
                                @Html.ValidationMessageFor(model => model.QnamakerSubscriptionKey, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label col-md-12" for="QnamakerUriBase">Base Uri QnA: </label>
                            <div class="col-md-12">
                                @Html.EditorFor(model => model.QnamakerUriBase, new { htmlAttributes = new { @class = "form-control", required = "required" } })
                                @Html.ValidationMessageFor(model => model.QnamakerUriBase, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <h4 style="color: @Html.Raw(string.IsNullOrEmpty(User.Identity.GetFooterColor()) ? "#3C1053" : User.Identity.GetFooterColor()); font-weight: bold;">
                            LUIS API
                        </h4>
                        <!--LUIS-->
                        <div class="form-group">
                            <label class="control-label col-md-12" for="EndPointApiLuis">Id de la Aplicación: </label>
                            <div class="col-md-12">
                                @Html.EditorFor(model => model.EndPointApiLuis, new { htmlAttributes = new { @class = "form-control", required = "required" } })
                                @Html.ValidationMessageFor(model => model.EndPointApiLuis, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label col-md-12" for="AuthoringKeyApiLuis">Key Autorización LUIS: </label>
                            <div class="col-md-12">
                                @Html.EditorFor(model => model.AuthoringKeyApiLuis, new { htmlAttributes = new { @class = "form-control", required = "required" } })
                                @Html.ValidationMessageFor(model => model.AuthoringKeyApiLuis, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label col-md-12" for="QnamakerUriBase">Uri LUIS: </label>
                            <div class="col-md-12">
                                @Html.EditorFor(model => model.UriBaseApiLuis, new { htmlAttributes = new { @class = "form-control", required = "required" } })
                                @Html.ValidationMessageFor(model => model.UriBaseApiLuis, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label col-md-12" for="QnamakerUriBase">Bing Spell Check Key: </label>
                            <div class="col-md-12">
                                @Html.EditorFor(model => model.KeySpellCheck, new { htmlAttributes = new { @class = "form-control", required = "required" } })
                                @Html.ValidationMessageFor(model => model.KeySpellCheck, "", new { @class = "text-danger" })
                            </div>
                        </div>
                    </fieldset>
                </div>
                <div class="col-md-4 col-lg-4 col-xs-12">
                    <h4 style="color: @Html.Raw(string.IsNullOrEmpty(User.Identity.GetFooterColor()) ? "#3C1053" : User.Identity.GetFooterColor()); font-weight: bold;">
                        Imagen
                    </h4>
                    <div class="form-group">
                        <center>
                            <img src="https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcQ8Err4rTpziPrEKfgyTimsenU-SEXpbPHQbw3cAnRn20EE3I1C" class="img-thumbnail" id="imagePreview" />
                        </center>
                        <label class="control-label col-md-12" for="LogoLocation">Logo: </label>
                        <div class="col-md-12">
                            @Html.HiddenFor(model => model.LogoLocation)
                            @Html.TextBox("file1", "", new { type = "file", accept = "image/*", required = "required" })
                            @Html.ValidationMessageFor(model => model.LogoLocation, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-12">
                            <input type="submit" value="Crear Nuevo Cliente" class="btn btn-sami-success btn-block" />
                        </div>
                    </div>
                </div>
                <div class="col-md-12 col-lg-12 col-xs-12">
                    <div class="row">
                        @ViewBag.Message
                    </div>
                </div>
            </div>
        }
    </div>
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
<br />